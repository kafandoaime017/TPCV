# Activer le moteur de réécriture
RewriteEngine On

# Forcer la version sans /index ou /index.html
RewriteCond %{THE_REQUEST} /index(\.html)? [NC]
RewriteRule ^(.*)index(\.html)?$ /$1 [R=301,L]

# Supprimer l’extension .html de toutes les pages
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Empêcher l’accès direct aux .html
RewriteCond %{THE_REQUEST} "\.html " [NC]
RewriteRule .* - [F]

# Redirection pour que seule une version de la page soit accessible
RewriteCond %{REQUEST_URI} !/$ [NC]
RewriteRule ^([^/.]+)/?$ /$1/ [R=301,L]

# Gestion des erreurs 404
ErrorDocument 404 /404.html

# Désactiver l’indexation des répertoires
Options -Indexes
